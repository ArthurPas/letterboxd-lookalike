{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block body %}
    <style>

        @media (-webkit-min-device-pixel-ratio: 2) {
                .contains {
                    justify-content : center;
                }

                
                h1 {
                    font-size: 85px;
                    text-align: center;
                }

                .row {
                display: flex;
                flex-wrap: wrap;
                flex-direction: row;
                justify-content: center;
                }
            
                .col-2_4{
                    display: flex;
                    flex-direction: column;
                    margin: 0 100px 100px 100px !important;
                }

                .col-2_4 a{
                    font-size: 30px !important;
                    width: 350px !important;
                }

                img{
                    width: 350px !important;
                    height: 520px !important;
                }
            }
            
        .col-2_4,
        .col-sm-2_4,
        .col-md-2_4,
        .col-lg-2_4,
        .col-xl-2_4 {
            width: 100%;
            min-height: 1px;
            display: flex;
            flex-direction: column;
        }
        .col-2_4 {
            -webkit-box-flex: 0;
            -ms-flex: 0 0 20%;
            flex: 0 0 20%;
            max-width: 20%;
            justify-content: center;
            align-items: center;
            margin-bottom: 50px;
        }
        .col-2_4 a{
            text-align: center;
            width: 300px;
        }
        img{
            width: 300px;
            height: 400px;
        }
        
        .contain{
            margin-left: 5%;
            margin-right: 5%;
            padding: 15px;
            padding-top: 5px;
            padding-bottom: 15px;
            border-radius: 5px;
            background-color: rgba(0,0,0,0.5);
        }
        
        h1 {
            color: white;
            margin: 30px;
        }

        form{
           margin-left : 30px; 
        }
        #accueil-clr{
            color:#c82333;
        }
        #accueil-clr:hover{
            font-weight:bold;
        }
    </style>
    <div class="contain">
        <h1>Accueil</h1>
        <div class="row ligne_theme">
            {% for series in series %}
                    <div class="col-2_4">
                        <img src={{path('app_accueil_poster',{'id':series.id})}}>
                        <a href="{{ path('app_series_show', {'id': series.id, 'season': '1'}) }}" class="btn btn-secondary btn-lg" role="button" aria-disabled="true">{{ series.title }}</a>
                    </div>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}
