{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}
    <h1>Series</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ series.title }}</td>
            </tr>
            <tr>
                <th>Plot</th>
                <td>{{ series.plot }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ series.showPoster }}</td>
            </tr>
            <tr>
                <th>YoutubeTrailer</th>
                <td>{{ series.youtubeTrailer }}</td>
            </tr>
            <tr>
                <th>Seasons</th>
                    <td>
                        <select>
                            {% for seasons in seasons %}
                                <option>
                                    <a href="{{ path('app_series_show', {id : series.id, season : seasons.number})}}">{{ seasons.number }}</a>
                                </option>
                            {% endfor %}
                        </select>
                    </td>
            </tr>
            <tr>
                <th>Awards</th>
                <td>{{ series.awards }}</td>
            </tr>
            <tr>
                <th>YearStart</th>
                <td>{{ series.yearStart }}</td>
            </tr>
            <tr>
                <th>YearEnd</th>
                <td>{{ series.YearEnd }}</td>
            </tr>
            <tr>
            <th>Episodes</th>
                
                {% for episodes in episode %}
                    <li>
                    {{ episodes.title }}
                    </li>
                {% endfor %}
                
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_series_index') }}">back to list</a>

{% endblock %}
