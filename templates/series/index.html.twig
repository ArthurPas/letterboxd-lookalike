{% extends 'base.html.twig' %}

{% block title %}Series catalogue{% endblock %}

{% block body %}
    <style>

        @media (-webkit-min-device-pixel-ratio: 2) {
            .contains {
                justify-content : center;
            }

            
            h1 {
                font-size: 40px;
                text-align: center;
            }

            .col-2_4 {
                width: 120px;
            }

            .col-2_4 a {
                width: 140px !important;
                font-size: 15px;
            }

            img {
                width: 140px !important;
                height: 150px !important;
            }
        }

        .col-2_4,
        .col-sm-2_4,
        .col-md-2_4,
        .col-lg-2_4,
        .col-xl-2_4 {
            width: 100%;
            min-height: 1px;
            display: flex;
            flex-direction: column;
        }
        .col-2_4 {
            -webkit-box-flex: 0;
            -ms-flex: 0 0 20%;
            flex: 0 0 20%;
            max-width: 20%;
            justify-content: center;
            align-items: center;
            margin-bottom: 50px;
        }
        .col-2_4 a{
            text-align: center;
            width: 300px;
        }
        img{
            width: 300px;
            height: 400px;
        }
        
        .contain{
            margin-left: 5%;
            margin-right: 5%;
            padding: 15px;
            padding-top: 5px;
            padding-bottom: 15px;
            border-radius: 5px;
            background-color: rgba(0,0,0,0.5);
        }
        
        h1 {
            color: white;
            margin: 30px;
        }

        form{
           margin-left : 30px; 
        }

        #series-clr{
            color: #c82333;
        }
            
        #series-clr:hover{
            font-weight: bold;
        }

    </style>
    <div class="contain">
    <h1>DÃ©couvrir</h1>

    <form action="" method="GET">
            <label>nom: </label>
            <input type="text" name="initiale"/>
            <label>date: </label>
            <input type="text" name="annee"/>
            <label>genre</label>
            <input type="text" name="genre"/>
            <input type="submit"/>
    </form>

        <div class="row ligne_theme">
            {% for series in series %}
                    <div class="col-2_4">
                        <img src={{path('app_series_poster',{'id':series.id})}}>
                        <a href="{{ path('app_series_show', {'id': series.id, 'season': '1'}) }}" class="btn btn-secondary btn-lg" role="button" aria-disabled="true">{{ series.title }}</a>
                    </div>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
                <form id="pagination" method="GET">
            {% for nb in 1.. nb / 10 %}
                    <label class="btn btn-secondary" for="option1{{nb}}">{{nb}}</label>
                    <input type="radio" style="display: none;" onClick='document.getElementById("pagination").submit()' name="nb" value={{nb}} class="btn-check" id="option1{{nb}}"/>
            {% endfor %}
                </form>
        </div>
    </div>
{% endblock %}
