{% extends 'base.html.twig' %}

{% block title %}Editer series{% endblock %}

{% block body %}
<style>

    *{
        color: white;
    }

    .contain{
        margin-left: 5%;
        margin-right: 5%;
        padding: 15px;
        padding-top: 5px;
        padding-bottom: 15px;
        border-radius: 5px;
        background-color: rgba(0,0,0,0.5);
        display: flex;
        flex-direction: column;
    }

    h1 {
        color: white;
        margin: 30px;
    }
    
    .ecart {
        margin-left : 30px;
    }

    input, textarea{
        color: black;
        margin-bottom: 10px;
    }

    label{
        font-weight: bold;
    }
</style>

<div class="contain">
    <h1>Modifier la page {{ serie.title }}</h1>
    <div class="ecart">
        <form method="POST" action="{{path('app_series_show',{'id': serie.id, 'season': 1})}}">
        
            <label for="titreSerie">Titre de la série</label>
            <input type="text" class="form-control" id="titreSerie" name="titreSerie" value="{{ serie.title }}" required>
            
            <label for="plotSerie">Plot</label>
            <textarea class="form-control" id="plotSerie" name="plotSerie">{{ serie.plot }}</textarea>

            <label for="dateDebut">Date de debut de la série</label>
            <input type="text" class="form-control" id="dateDebut" name="dateDebut" value="{{ serie.yearStart }}" required>

            <label for="dateFin">Date de fin de la série</label>
            <input type="text" class="form-control" id="dateFin" name="dateFin" value="{{ serie.yearEnd }}">

            <label for="imdbSerie">Valeur imdb</label>
            <input type="text" class="form-control" id="imdbSerie" name="imdbSerie" value="{{ serie.imdb }}">

            <label for="awardsSerie">Awards</label>
            <input type="text" class="form-control" id="awardsSerie" name="awardsSerie" value="{{ serie.awards }}">

            <input type="submit" class="btn btn-danger btn-lg" role="button" aria-disabled="true" value="Modifier">
        </form>
    </div>
</div>



{% endblock %}