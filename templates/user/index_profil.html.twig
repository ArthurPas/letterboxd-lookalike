{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <style>
        * {
            color: white;
        }

        .user-title {
            padding-top: 20px;
            padding-bottom: 20px;
            padding-left: 20px;
        }

        .contain{
            margin-left: 5%;
            margin-right: 5%;
            padding: 15px;
            padding-top: 5px;
            padding-bottom: 15px;
            border-radius: 5px;
            background-color: rgba(0,0,0,0.5);
        }
        
        #profil-clr{
            color: #c82333;
        }
            
        #profil-clr:hover{
            font-weight: bold;
        }
        
        @media (-webkit-min-device-pixel-ratio: 2) {
            h1{
                font-size: 85px;
                text-align: center;
            }
        }

        .rechercheParMail {
            margin-bottom: 20px;
        }

        ::placeholder {
            color:rgb(110, 110, 110); 
        }

    </style>
    <div class="contain">
        <h1 class="user-title">Liste des utilisateurs</h1>
        <div class="rechercheParMail">
            <form method='POST'>
                <input type='text' name='mail' placeholder='user@email.fr' style="color: black; height: 46px; border-radius: 4px; border: none;">
                <input class="btn btn-secondary btn-lg" role="button" aria-disabled="true" type='submit' value='Rechercher' href='app_user_index'>
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><b>{{ user.name }}</b></td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('app_user_ficheUtilisateur', {'userID': user.id}) }}" class="btn btn-primary btn-lg" role="button" aria-disabled="true">Consulter</a>
                    </td>
                </tr>
        
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
