{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <style>
        * {
            color: white;
        }

        .user-title {
            padding-top: 20px;
            padding-bottom: 20px;
            padding-left: 20px;
        }

        .contain{
            margin-left: 5%;
            margin-right: 5%;
            padding: 15px;
            padding-top: 5px;
            padding-bottom: 15px;
            border-radius: 5px;
            background-color: rgba(0,0,0,0.5);
        }
        
        #utilisateurs-clr{
            color: #c82333;
        }
            
        #utilisateurs-clr:hover{
            font-weight: bold;
        }

        .rechercheParMail {
            display: flex;
            width: 100%;
            align-items: center;
            margin-bottom: 40px;
            justify-content: end;

        }

        .pagination a, .current{
            color: white;
            padding: 10px;
            margin: 3px;
            border: 1px solid #6c757d;
            border-radius: 4px;
            background: #6c757d;
            transition: 0.2s;
            text-decoration: none;
        }

        .pagination a:hover{
            border: 1px solid #545b62;
            background: #545b62;
            transition: 0.2s;
        }

    </style>
    <div class="contain">
        <h1 class="user-title">Liste des utilisateurs</h1>
        <div class="rechercheParMail">
            <form method='POST'>
                <input type='text' name='mail' placeholder="Email">
                <input type='submit' value='Rechercher' href='app_user_index'>
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Date d'inscription</th>
                    <th>Admin</th>
                    <th>Pays</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td><b>{{ user.name }}</b></td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.admin ? 'Yes' : 'No' }}</td>
                    <td>{{ user.country }}</td>
                    <td><a href="{{ path('app_series_index', {'_switch_user': user.email}) }}" class="btn btn-warning btn-lg" role="button" aria-disabled="true">Incarner</a></td>
                </tr>
        
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(users) }} 
    </div>
{% endblock %}
